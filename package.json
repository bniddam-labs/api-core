{
	"name": "@bniddam-labs/api-core",
	"version": "2.0.1",
	"description": "Framework-agnostic HTTP API patterns with NestJS adapters (Zod schemas, validation, Swagger helpers)",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.js"
		}
	},
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"clean": "rm -rf dist",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"format": "biome format --write .",
		"check": "biome check . && pnpm run typecheck",
		"typecheck": "tsc --noEmit",
		"test": "vitest",
		"test:watch": "vitest --watch",
		"test:coverage": "vitest --coverage",
		"prepublishOnly": "pnpm run build"
	},
	"keywords": [
		"api",
		"zod",
		"validation",
		"http",
		"nestjs",
		"swagger",
		"openapi",
		"framework-agnostic"
	],
	"author": "bniddam",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bniddam-labs/api-core.git"
	},
	"bugs": {
		"url": "https://github.com/bniddam-labs/api-core/issues"
	},
	"homepage": "https://github.com/bniddam-labs/api-core#readme",
	"files": [
		"src",
		"dist",
		"README.md",
		"LICENSE",
		"*.json",
		"*.ts"
	],
	"peerDependencies": {
		"@nestjs/common": "^11.0.0",
		"@nestjs/swagger": "^11.0.0"
	},
	"peerDependenciesMeta": {
		"@nestjs/common": {
			"optional": true
		},
		"@nestjs/swagger": {
			"optional": true
		}
	},
	"dependencies": {
		"@bniddam-labs/core": "github:bniddam-labs/core",
		"@bniddam-labs/utils": "github:bniddam-labs/utils",
		"reflect-metadata": "^0.2.2",
		"zod": "^4.1.13",
		"zod-validation-error": "^5.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@nestjs/common": "^11.1.9",
		"@nestjs/swagger": "^11.2.3",
		"@types/express": "^5.0.6",
		"@types/node": "^25.0.0",
		"rxjs": "^7.8.2",
		"tsup": "^8.5.1",
		"typescript": "^5.9.3",
		"vitest": "^4.0.15"
	},
	"engines": {
		"node": ">=20.0.0",
		"pnpm": ">=9.0.0"
	}
}
